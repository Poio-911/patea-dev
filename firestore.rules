rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    function isResourceOwner(resourceData) {
      return isAuthenticated() && request.auth.uid == resourceData.ownerUid;
    }
    
    function isTeamOwner(teamId) {
      let teamDoc = get(/databases/$(database)/documents/teams/$(teamId));
      return teamDoc.data.createdBy == request.auth.uid;
    }

    function isTeamMember(teamId) {
      let teamData = get(/databases/$(database)/documents/teams/$(teamId)).data;
      // Use `hasAny` for checking if the user's ID is in the list of member IDs.
      return request.auth.uid in teamData.members.map(member => member.playerId);
    }
    
    match /users/{userId} {
      // ✅ CORRECCIÓN CRÍTICA: Cualquiera autenticado puede leer, solo el dueño puede escribir.
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);

      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      match /fcmTokens/{tokenId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /players/{playerId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(playerId) || isResourceOwner(resource.data);

      match /ovrHistory/{historyId} {
        allow read: if isAuthenticated();
        allow write: if false; 
      }
    }
    
    match /groups/{groupId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(request.resource.data.ownerUid);
      allow update, delete: if isResourceOwner(resource.data);
    }

    match /teams/{teamId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && isOwner(request.resource.data.createdBy);
        allow update: if isOwner(resource.data.createdBy);
        allow delete: if isOwner(resource.data.createdBy);

        match /invitations/{invitationId} {
            // Permitir leer si sos dueño del equipo desafiado O del equipo desafiante
            allow read: if isAuthenticated() && (isTeamOwner(resource.data.toTeamId) || isTeamOwner(resource.data.fromTeamId));
            // Solo el dueño del equipo desafiante puede crear
            allow create: if isAuthenticated() && isTeamOwner(request.resource.data.fromTeamId);
            // ✅ MEJORA: Ahora, CUALQUIER MIEMBRO del equipo desafiado (no solo el dueño) puede aceptar/rechazar
            allow update: if isAuthenticated() && isTeamMember(resource.data.toTeamId);
            // El dueño de cualquiera de los dos equipos puede borrar
            allow delete: if isAuthenticated() && (isTeamOwner(resource.data.toTeamId) || isTeamOwner(resource.data.fromTeamId));
        }
    }
    
    // Reglas para el resto de colecciones (pueden requerir ajuste)
    match /{document=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
