
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regla predeterminada: permitir lectura y escritura a cualquier usuario autenticado.
    // Esto es útil para el desarrollo rápido, pero debe ser refinado para producción.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
