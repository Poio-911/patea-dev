
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ───────────────────────────────────────────────────────────
    // HELPER FUNCTIONS
    // ───────────────────────────────────────────────────────────

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    function isResourceOwner(resourceData) {
      return isAuthenticated() && request.auth.uid == resourceData.ownerUid;
    }
    
    function isTeamOwner(teamId) {
      let teamDoc = get(/databases/$(database)/documents/teams/$(teamId));
      return teamDoc.data.createdBy == request.auth.uid;
    }

    // ✅ NUEVA FUNCIÓN: Verifica si el usuario es miembro de un equipo específico
    function isTeamMember(teamId) {
      let teamData = get(/databases/$(database)/documents/teams/$(teamId)).data;
      return request.auth.uid in teamData.members.map(member => member.playerId);
    }

    // ───────────────────────────────────────────────────────────
    // USERS COLLECTION
    // ───────────────────────────────────────────────────────────

    match /users/{userId} {
      // ✅ CORRECCIÓN CRÍTICA: Se permite lectura a cualquier usuario autenticado
      // y escritura solo si es el dueño. Esto soluciona el error "Missing or insufficient permissions".
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);

      // Subcollections
      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      match /fcmTokens/{tokenId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ───────────────────────────────────────────────────────────
    // GLOBAL COLLECTIONS
    // ───────────────────────────────────────────────────────────

    match /players/{playerId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(playerId) || isResourceOwner(resource.data);

      match /ovrHistory/{historyId} {
        allow read: if isAuthenticated();
        allow write: if false; // Server-side only
      }
    }

    match /availablePlayers/{playerId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(playerId);
    }
    
    match /groups/{groupId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(request.resource.data.ownerUid);
      allow update, delete: if isResourceOwner(resource.data);
    }

    match /teams/{teamId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && isOwner(request.resource.data.createdBy);
        allow update: if isOwner(resource.data.createdBy);
        allow delete: if isOwner(resource.data.createdBy);

        match /invitations/{invitationId} {
            // Permitir leer si sos dueño del equipo desafiado O del equipo desafiante
            allow read: if isAuthenticated() && (isTeamOwner(resource.data.toTeamId) || isTeamOwner(resource.data.fromTeamId));
            // Solo el dueño del equipo desafiante puede crear
            allow create: if isAuthenticated() && isTeamOwner(request.resource.data.fromTeamId);
            // ✅ MEJORA: Ahora, CUALQUIER MIEMBRO del equipo desafiado (no solo el dueño) puede aceptar/rechazar
            allow update: if isAuthenticated() && isTeamMember(resource.data.toTeamId);
            // El dueño de cualquiera de los dos equipos puede borrar
            allow delete: if isAuthenticated() && (isTeamOwner(resource.data.toTeamId) || isTeamOwner(resource.data.fromTeamId));
        }
    }

    match /matches/{matchId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(request.resource.data.ownerUid);
      allow update: if isResourceOwner(resource.data);
      allow delete: if isResourceOwner(resource.data);

      match /assignments/{assignmentId} {
        allow read: if isAuthenticated();
        allow write: if false; // Server-side only
      }
      
      // ✅ NUEVO: Subcolección para submissions procesadas (solo lectura para dueños)
      match /processedSubmissions/{submissionId} {
        allow read: if isResourceOwner(get(/databases/$(database)/documents/matches/$(matchId)).data);
        allow write: if false;
      }

      match /selfEvaluations/{evalId} {
        allow read, create, update: if isAuthenticated();
        allow delete: if false;
      }

      match /messages/{messageId} {
        allow read, create: if isAuthenticated();
        allow update, delete: if isOwner(resource.data.senderId);
      }
      
      match /invitations/{invitationId} {
          allow read: if isAuthenticated();
          allow create: if isResourceOwner(get(/databases/$(database)/documents/matches/$(matchId)).data);
          allow update: if isAuthenticated() && isOwner(resource.data.playerId);
          allow delete: if isResourceOwner(get(/databases/$(database)/documents/matches/$(matchId)).data);
      }
    }
    
    match /evaluationSubmissions/{submissionId} {
        allow create: if isAuthenticated();
        allow read, update, delete: if false; // Processed server-side
    }

    match /evaluations/{evalId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-side only
    }

  }
}
