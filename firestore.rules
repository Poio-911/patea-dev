
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ───────────────────────────────────────────────────────────
    // HELPER FUNCTIONS
    // ───────────────────────────────────────────────────────────

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }

    function isResourceOwner(resourceData) {
      return isAuthenticated() && request.auth.uid == resourceData.ownerUid;
    }
    
    function isTeamOwner(teamId) {
      return get(/databases/$(database)/documents/teams/$(teamId)).data.createdBy == request.auth.uid;
    }
    
    function isChallengingTeamOwner(invitationData) {
        return isTeamOwner(invitationData.fromTeamId);
    }

    // ───────────────────────────────────────────────────────────
    // USERS COLLECTION
    // ───────────────────────────────────────────────────────────

    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isOwner(userId);

      // Subcollections
      match /notifications/{notificationId} {
        allow read, write: if isOwner(userId);
      }
      match /fcmTokens/{tokenId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ───────────────────────────────────────────────────────────
    // GLOBAL COLLECTIONS
    // ───────────────────────────────────────────────────────────

    match /players/{playerId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(playerId) || isResourceOwner(resource.data);

      match /ovrHistory/{historyId} {
        allow read: if isAuthenticated();
        allow write: if false; // Server-side only
      }
    }

    match /availablePlayers/{playerId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(playerId);
    }
    
    match /groups/{groupId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(request.resource.data.ownerUid);
      allow update, delete: if isResourceOwner(resource.data);
    }

    match /teams/{teamId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && isOwner(request.resource.data.createdBy);
        allow update: if isOwner(resource.data.createdBy);
        allow delete: if isOwner(resource.data.createdBy);

        match /invitations/{invitationId} {
            // Read allowed if user is owner of either the challenged or challenging team
            allow read: if isAuthenticated() && (isTeamOwner(resource.data.toTeamId) || isChallengingTeamOwner(resource.data));
            // Only owner of challenging team can create
            allow create: if isAuthenticated() && isChallengingTeamOwner(request.resource.data);
            // Only owner of challenged team can update (accept/decline)
            allow update: if isAuthenticated() && isTeamOwner(resource.data.toTeamId);
            // Owner of either team can delete it
            allow delete: if isAuthenticated() && (isTeamOwner(resource.data.toTeamId) || isChallengingTeamOwner(resource.data));
        }
    }

    match /matches/{matchId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(request.resource.data.ownerUid);
      allow update: if isResourceOwner(resource.data);
      allow delete: if isResourceOwner(resource.data);

      match /assignments/{assignmentId} {
        allow read: if isAuthenticated();
        allow write: if false; // Server-side only
      }

      match /selfEvaluations/{evalId} {
        allow read, create, update: if isAuthenticated();
        allow delete: if false;
      }

      match /messages/{messageId} {
        allow read, create: if isAuthenticated();
        allow update, delete: if isOwner(resource.data.senderId);
      }
      
      match /invitations/{invitationId} {
          allow read: if isAuthenticated();
          allow create: if isResourceOwner(get(/databases/$(database)/documents/matches/$(matchId)).data);
          allow update: if isAuthenticated() && isOwner(resource.data.playerId);
          allow delete: if isResourceOwner(get(/databases/$(database)/documents/matches/$(matchId)).data);
      }
    }
    
    match /evaluationSubmissions/{submissionId} {
        allow create: if isAuthenticated();
        allow read, update, delete: if false; // Processed server-side
    }

    match /evaluations/{evalId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-side only
    }

  }
}
