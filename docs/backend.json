{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID." },
        "email": { "type": "string", "format": "email" },
        "displayName": { "type": "string" },
        "photoURL": { "type": "string", "format": "uri" },
        "groups": { "type": "array", "items": { "type": "string" }, "description": "List of group IDs the user is a member of." },
        "activeGroupId": { "type": "string", "description": "The ID of the user's currently active group." }
      },
      "required": ["uid", "email"]
    },
    "player": {
      "title": "Player",
      "description": "Represents a football player.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "position": { "type": "string", "enum": ["DEL", "MED", "DEF", "POR"] },
        "ovr": { "type": "number" },
        "pac": { "type": "number" },
        "sho": { "type": "number" },
        "pas": { "type": "number" },
        "dri": { "type": "number" },
        "def": { "type": "number" },
        "phy": { "type": "number" },
        "photoUrl": { "type": "string", "format": "uri" },
        "stats": {
          "type": "object",
          "properties": {
            "matchesPlayed": { "type": "number" },
            "goals": { "type": "number" },
            "assists": { "type": "number" },
            "averageRating": { "type": "number" }
          }
        },
        "ownerUid": { "type": "string" },
        "groupId": { "type": "string", "description": "The ID of the group this player belongs to." }
      },
      "required": ["name", "position", "ovr", "ownerUid"]
    },
    "match": {
      "title": "Match",
      "description": "Represents a football match.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "time": { "type": "string" },
        "location": { "type": "string" },
        "type": { "type": "string", "enum": ["manual", "collaborative"] },
        "matchSize": { "type": "number", "enum": [10, 14, 22] },
        "status": { "type": "string", "enum": ["upcoming", "active", "completed", "evaluated"] },
        "ownerUid": { "type": "string" },
        "groupId": { "type": "string", "description": "The ID of the group this match belongs to." },
        "players": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "uid": { "type": "string" },
              "displayName": { "type": "string" },
              "ovr": { "type": "number" },
              "position": { "type": "string" },
              "photoUrl": { "type": "string", "format": "uri" }
            }
          }
        },
        "teams": { "type": "array", "items": { "$ref": "#/entities/team" } }
      },
      "required": ["title", "date", "status", "ownerUid", "groupId", "type", "matchSize"]
    },
    "team": {
      "title": "Team",
      "description": "Represents a generated team for a match.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "players": {
          "type": "array",
           "items": {
            "type": "object",
            "properties": {
              "uid": { "type": "string" },
              "displayName": { "type": "string" },
              "ovr": { "type": "number" },
              "position": { "type": "string" }
            }
          }
        },
        "totalOVR": { "type": "number" },
        "averageOVR": { "type": "number" }
      },
      "required": ["name", "players"]
    },
    "group": {
      "title": "Group",
      "description": "Represents a user group.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "ownerUid": { "type": "string" },
        "inviteCode": { "type": "string" },
        "members": { "type": "array", "items": { "type": "string" }, "description": "List of user UIDs who are members of this group." }
      },
      "required": ["name", "ownerUid", "inviteCode"]
    },
    "evaluation": {
      "title": "Evaluation",
      "description": "Stores a single player's evaluation for a specific match, submitted by another player.",
      "type": "object",
      "properties": {
        "assignmentId": { "type": "string" },
        "playerId": { "type": "string" },
        "evaluatorId": { "type": "string" },
        "goals": { "type": "number" },
        "rating": { "type": "number" },
        "performanceTags": { "type": "array", "items": { "type": "string" } },
        "evaluatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["assignmentId", "playerId", "evaluatorId", "rating"]
    },
    "evaluationAssignment": {
      "title": "Evaluation Assignment",
      "description": "Represents a task for a player to evaluate a teammate in a match.",
      "type": "object",
      "properties": {
        "matchId": { "type": "string" },
        "evaluatorId": { "type": "string" },
        "subjectId": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "completed"] },
        "evaluationId": { "type": "string" }
      },
      "required": ["matchId", "evaluatorId", "subjectId", "status"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/userProfile" },
      "description": "Stores public profiles for users."
    },
    "/players/{playerId}": {
      "schema": { "$ref": "#/entities/player" },
      "description": "Stores data for each player, linked to a group. PlayerId is the same as the user's UID for registered users."
    },
    "/groups/{groupId}": {
      "schema": { "$ref": "#/entities/group" },
      "description": "Stores data for each user group."
    },
    "/matches/{matchId}": {
      "schema": { "$ref": "#/entities/match" },
      "description": "Stores data for each match, linked to a group."
    },
    "/matches/{matchId}/assignments/{assignmentId}": {
      "schema": { "$ref": "#/entities/evaluationAssignment" },
      "description": "Stores all the evaluation assignments for a specific match."
    },
    "/evaluations/{evaluationId}": {
        "schema": { "$ref": "#/entities/evaluation" },
        "description": "Stores all individual evaluation records across all matches."
    }
  }
}
