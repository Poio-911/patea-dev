{
  "entities": {
    "userProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      },
      "required": ["uid", "email"]
    },
    "player": {
      "title": "Player",
      "description": "Represents a football player.",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "position": { "type": "string", "enum": ["DEL", "MED", "DEF", "POR"] },
        "ovr": { "type": "number" },
        "pac": { "type": "number" },
        "sho": { "type": "number" },
        "pas": { "type": "number" },
        "dri": { "type": "number" },
        "def": { "type": "number" },
        "phy": { "type": "number" },
        "photoUrl": { "type": "string", "format": "uri" },
        "stats": {
          "type": "object",
          "properties": {
            "matchesPlayed": { "type": "number" },
            "goals": { "type": "number" },
            "assists": { "type": "number" },
            "averageRating": { "type": "number" }
          }
        },
        "ownerUid": { "type": "string" }
      },
      "required": ["name", "position", "ovr", "ownerUid"]
    },
    "match": {
      "title": "Match",
      "description": "Represents a football match.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "time": { "type": "string" },
        "location": { "type": "string" },
        "type": { "type": "string" },
        "status": { "type": "string", "enum": ["upcoming", "active", "completed", "evaluated"] },
        "ownerUid": { "type": "string" }
      },
      "required": ["title", "date", "status", "ownerUid"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/userProfile" },
      "description": "Stores public profiles for users."
    },
    "/players/{playerId}": {
      "schema": { "$ref": "#/entities/player" },
      "description": "Stores data for each player."
    },
    "/matches/{matchId}": {
      "schema": { "$ref": "#/entities/match" },
      "description": "Stores data for each match."
    }
  }
}
